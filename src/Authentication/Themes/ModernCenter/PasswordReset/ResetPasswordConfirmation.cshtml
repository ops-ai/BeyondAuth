<div class="container account-container py-5 my-auto">
    <div class="card">
        <div class="card-decor d-none d-sm-block">
            <div class="card-decor-t"></div>
            <div class="card-decor-b"></div>
        </div>
        <div class="card-body">
            <h4 class="card-title text-center py-3">Password Reset</h4>
            <p class="text-center">Your password has been successfully changed</p>

            <fieldset>
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary mt-4 w-100" asp-route-returnUrl="@ViewData["ReturnUrl"]">Login</a>
            </fieldset>
        </div>
    </div>
</div>